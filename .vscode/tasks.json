{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: clang++",
            "detail": "MacOs: Build including all *.cpp files",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "C/C++: clang++",
            "detail": "MacOS: Build including all *.cpp files with pedantic and ISO flags.",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-pedantic-errors",
                "-std=c++17",
                "-std=c++14",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "group": "build"
        },
        {
            "label": "C/C++: g++",
            "detail": "Linux: Build including all *.cpp files.",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "C/C++: g++",
            "detail": "Linux: Build including all *.cpp files with pedantic and ISO flags.",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c++17",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "C/C++: g++.exe",
            "detail": "Windows: Build including all *.cpp files.",
            "type": "cppbuild",
            "command": "C:\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}